# ----------------------------------------------------------------------------------------------------------------------
FROM ubuntu:bionic
ENV DEBIAN_FRONTENT=noninteractive
RUN apt-get update -y

# ----------------------------------------------------------------------------------------------------------------------
# Repository Tools
# ----------------------------------------------------------------------------------------------------------------------
RUN apt-get install -y \
	apt-utils \
	curl \
	software-properties-common

# ----------------------------------------------------------------------------------------------------------------------
# Repository Sources
# ----------------------------------------------------------------------------------------------------------------------
RUN add-apt-repository ppa:git-core/ppa
RUN curl -sL https://deb.nodesource.com/setup_10.x | bash -

# ----------------------------------------------------------------------------------------------------------------------
# Tools
# ----------------------------------------------------------------------------------------------------------------------
RUN apt-get install -y \
	build-essential \
	git \
	git-lfs \
	gnupg2 \
	nodejs
