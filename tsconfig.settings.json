{
	"compilerOptions": {
		"module": "amd",
		"target": "es2017",
		"sourceMap": true,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
		"charset": "utf-8",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"stripInternal": true,
		"noEmit": true,
		"paths": {
			"@chipotle/types/*": ["../types/src/*"],
			"@chipotle/debug/*": ["../debug/src/*"],
			"@chipotle/vm/*": ["../vm/src/*"]
		}
	}
}
