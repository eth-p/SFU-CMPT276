{
	"modules": {

		"docs": {
			"description": "Project documentation.",
			"@meta": true,

			"sources": [
				"*.md",
				"docs/**/*.md"
			]
		},

		"tools": {
			"description": "Project tooling.",
			"@meta": true,

			"sources": [
				".script/**/*",
				"package.json",
				"package-lock.json",
				".prettierrc"
			],

			"exclude": [
				"*.{png,jpeg,jpg,svg}"
			]

		},

		"ci": {
			"description": "Continuous integration.",
			"@meta": true,

			"sources": [
				".circle/**/*"
			]
		},

		"repo": {
			"description": "The repo.",
			"@meta": true,

			"sources": [
				".editorconfig",
				".git{ignore,attributes}",
				"project.json"
			],

			"exclude": [
				"**/node_modules",
				"**/.tmp"
			]

		},

		"debug": {
			"description": "Common debug functions.",
			"@auto": true
		},

		"types": {
			"description": "Common type definitions.",
			"@auto": true
		},

		"vm": {
			"description": "Software representation of CHIP-8 hardware.",
			"@auto": true
		}

	}
