{
	"modules": {

		"docs": {
			"description": "Project documentation.",
			"@meta": true,

			"sources": [
				"*.md",
				"docs/**/*.md"
			]
		},

		"tools": {
			"description": "Project tooling.",
			"@meta": true,

			"sources": [
				".script/**/*",
				"package.json",
				"package-lock.json",
				".prettierrc"
			],

			"exclude": [
				"*.{png,jpeg,jpg,svg}"
			]

		},

		"ci": {
			"description": "Continuous integration.",
			"@meta": true,

			"sources": [
				".circle/**/*"
			]
		},

		"repo": {
			"description": "The repo.",
			"@meta": true,

			"sources": [
				".editorconfig",
				".git{ignore,attributes}",
				"project.json"
			],

			"exclude": [
				"**/node_modules",
				"**/.tmp"
			],

			"tasks": [
				"clean",
				"package"
			]
		},

		"types": {
			"description": "Common type definitions.",
			"@auto": true,

			"tasks": [
				"typescript"
			]
		},

		"vm": {
			"description": "A software virtual machine.",
			"@auto": true,

			"tasks": [
				"typescript"
			]
		},

		"arch-chip": {
			"description": "Chip-8 system architecture.",
			"@auto": true,

			"tasks": [
				"typescript"
			]
		},

		"emu": {
			"description": "The emulator.",
			"@auto": true,

			"sources": [
				"styles/**/*.scss",
				"pages/**/*.pug"
			],

			"tasks": [
				"typescript",
				"sass",
				"pug"
			],

			"output": {
				"styles": "styles",
				"pages": "."
			}
		}
	},

	"tasks": {
		"clean": "repo:clean"
	}
}
