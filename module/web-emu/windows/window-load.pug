include ../../web/templates/page
include ../../web/components/common
include ../../web/components/desktop
include ../../web/components/toolbar
include ../../web/components/window

-// --------------------------------------------------------------------------------------------------------------------
-// Window: Settings
-// --------------------------------------------------------------------------------------------------------------------
mixin ui-window-load
	+desktop-overlay#emulator-load.centered.blocking.blocking
		+window.tabbed
			+window-title("Load Program")
				input(type="button" value="cancel" data-action="window-load-hide")

			+window-tabs
				+window-tab("load-library") Library
				+window-tab("load-upload") Upload

		+window-content
			+window-pane("load-upload")
				| Upload a ROM.

			+window-pane("load-library")
				| Use the built-in database of ROMs.

