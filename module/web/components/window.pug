mixin window(depth)
	.window(class=`${depth == null ? 1 : depth}z`)&attributes(attributes)
		block

mixin window-title(title)
	.window-title
		.title=title
		.buttons
			block

mixin window-tabs
	.toolbar
		block

mixin window-tab(pane)
	.toolbar-item(data-target=pane)&attributes(attributes)
		block

mixin window-pane(pane, visible)
	- classes = attributes.class || '';
	- if (visible !== true) classes += ' hide';
	.section(data-pane=pane class=classes)&attributes(attributes)
		block

mixin window-content
	.viewport&attributes(attributes)
		.content
			block
