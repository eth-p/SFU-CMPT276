include ../components/card

mixin member(name, options)
	- let image = options.image;
	- let href  = options.href;
	- let role  = options.role;

	+card(href=href, img=image, theme=(options.theme || 'dark'))&attributes(attributes).member.small
		.member-name=name
		.member-role=role
