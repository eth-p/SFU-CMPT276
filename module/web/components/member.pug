include card
-// --------------------------------------------------------------------------------------------------------------------

mixin member(name, options)
	- let image = options.image;
	- let href  = options.href;
	- let role  = options.role;
	- let git   = options.git;

	+card(href=href, img=image, theme=(options.theme || 'dark'))&attributes(attributes).member.small
		.member-name=name
		.member-role=role
		if git != null
			- var additions = git.additions > 1000 ? `${Math.floor(git.additions / 100) / 10}k` : git.additions
			- var deletions = git.deletions > 1000 ? `${Math.floor(git.deletions / 100) / 10}k` : git.deletions
			.member-git
				.git-stats
					.git-commits=`${git.commits}`
					.git-additions=`+${additions}`
					.git-deletions=`-${deletions}`

