mixin card-contents
	if attributes.img
		.card-image
			img(src=attributes.img)
	else
		.card-image-placeholder

	.card-data
		block

mixin card
	- var attr = Object.assign({}, attributes, {theme: null, href: null, img: null});
	.card(class=(attributes.theme ? `card-${attributes.theme}` : 'card-light'))&attributes(attr)
		if attributes.href
			a(href=attributes.href)
				+card-contents&attributes(attributes)
					block
		else
			+card-contents&attributes(attributes)
				block
